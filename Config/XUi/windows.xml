<configs>
		<!--  Compass -->
		<remove xpath="/windows/window[@name='windowCompass']" />

		<append xpath="/windows">
			<window name="windowCompass" pos="-190,-9" size="380,43" controller="CompassWindow">
				<texture name="survivorHUDcompassBG" depth="0" pos="-153,30" size="689,165"  texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/uiAtlas/survivorHUD_hud_compass_background.png" color="[hudElementsBG]" globalopacitymod="1.2" />
				<texture name="survivorHUDcompassMarker" depth="9" pos="170,10" size="42,58" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/uiAtlas/survivorHUD_hud_compass_marker.png" color="white"  />
				<texture name="compassTexture" depth="8" pos="0,-7" size="380,23" texture="Textures/UI/ui_game_compass" color="[iconColor]" tooltip="CHARACTER" rect_size="0.25,1" rect_offset=".8,0" />
			</window>
		</append>


		<!--  Unit Frames -->

		<remove xpath="/windows/window[@name='HUDLeftStatBars']" />

		<append xpath="/windows">
			<window name="HUDLeftStatBars" pos="-15,0" size="240,175">
				<rect name="survivorHUDstatBars" pos="-20,137" size="240,150" rows="2" cols="1" side="right">


					<rect name="survivorHUDstealthBar" pos="60,70" size="240,55" controller="HUDStatBar" stat_type="Stealth" visible="{statvisible}">
						<texture name="survivorHUDstatsIconBG" depth="6" pos="-10,-10" size="40,50" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/uiAtlas/survivorHUD_hud_icon_background_radial.png" color="[hudElementsBG]" pivot="center" globalopacitymod="1.8" rotation="90"  />
						<sprite name="mainBackground" depth="3" pos="-10,-1" size="210,18" atlas="uiAtlas" sprite="survivorHUD_stats_background_v2" type="filled" fill="1" globalopacitymod="1.5" color="[hudElementsBG]" flip="vertically" />
						<filledsprite name="barBackground" depth="4" pos="8,-6" size="190,8" atlas="uiAtlas" type="filled" fill="1" color="[darkGrey]" />
						<filledsprite name="BarContent" depth="5" pos="8,-6" size="190,8" atlas="uiAtlas" type="filled" fill="0" color="[hudElementsStealth]" />
						<texture name="Icon" depth="7" pos="-17,-2" size="16,16" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_stats_stealth_icon.png" color="[hudElementsIcon]" foregroundlayer="true" />
						<label name="TextContent" depth="7" pos="-20,-2" text="{statcurrent}" font_size="14" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" pivot="topleft" />
					</rect>

					<rect name="survivorHUDhealthBar" pos="0,32" size="240,55" controller="HUDStatBar" stat_type="Health" visible="{statvisible}">
						<texture name="survivorHUDstatsBG" depth="1" pos="0,15" size="325,170" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/uiAtlas/survivorHUD_stats_background_v2.png" type="sliced" globalopacitymod="1.5" color="[hudElementsBG]"   />
						<sprite name="background" depth="2" pos="66,-10" size="226,28" atlas="uiAtlas" type="sliced" globalopacitymod="0.6" color="[hudElementsBG]" />
						<filledsprite name="background" depth="3" pos="66,-10" size="226,28" atlas="uiAtlas" type="filled" fill="{statmodifiedmax}" globalopacitymod="1.3" color="[darkGrey]" />
						<filledsprite name="BarContent" depth="5" pos="66,-10" size="226,28" atlas="uiAtlas" type="filled" fill="0" color="[hudElementsHealth]" />
						<texture name="Icon" depth="7" pos="37,-12" size="22,22" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_stats_health_icon.png" color="[hudElementsIcon]" foregroundlayer="true"   />
 						<label name="TextContent" depth="7" pos="130,-16" text="{statcurrentwithmax}" font_size="16" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" pivot="topleft" />
					</rect>

					<rect name="survivorHUDstaminaBar" pos="0,0" size="240,55" controller="HUDStatBar" stat_type="Stamina" visible="{statvisible}">
						<sprite name="background" depth="2" pos="66,-10" size="194,22" atlas="uiAtlas" type="sliced" globalopacitymod="0.6" color="[hudElementsBG]" />
						<filledsprite name="background" depth="3" pos="66,-10" size="226,28" atlas="uiAtlas" type="filled" fill="{statmodifiedmax}" globalopacitymod="1.3" color="[darkGrey]" />
						<filledsprite name="BarContent" depth="5" pos="66,-10" size="226,28" atlas="uiAtlas" type="filled" fill="0" color="[hudElementsStamina]" />
						<texture name="Icon" depth="7" pos="37,-12" size="22,22" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_stats_stamina_icon.png" color="[hudElementsIcon]" foregroundlayer="true"   />
						<label name="TextContent" depth="7" pos="130,-16" text="{statcurrentwithmax}" font_size="16" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" pivot="topleft" />
					</rect>

					<rect name="survivorHUDhungerBar" pos="0,-32" size="240,55" controller="HUDStatBar" stat_type="Food" visible="{statvisible}">
						<sprite name="background" depth="3" pos="66,-10" size="226,28" atlas="uiAtlas" type="sliced" color="[darkGrey]" flip="vertically" />
                        <filledsprite name="background" depth="3" pos="66,-10" size="226,28" atlas="uiAtlas"  type="filled" fill="{statmodifiedmax}" globalopacitymod="1.3" color="[darkGrey]" />
						<filledsprite name="BarContent" depth="4" pos="66,-10" size="226,28" atlas="uiAtlas"  type="filled" fill="0" color="[hudElementsFood]" />
						<texture name="Icon" depth="7" pos="37,-12" size="22,22" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_stats_hunger_icon.png" color="[hudElementsIcon]" foregroundlayer="true"   />
						<label name="TextContent" depth="7" pos="145,-16" text="{playerfood}" font_size="16" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" pivot="topleft" controller="PlayerStatsWindow"/>
					</rect>

					<rect name="survivorHUDthirstBar" pos="0,-65" size="240,55" controller="HUDStatBar" stat_type="Water" visible="{statvisible}">
						<sprite name="background" depth="3" pos="66,-10" size="226,28" atlas="uiAtlas" type="sliced" color="[darkGrey]" flip="vertically" />
						<filledsprite name="background" depth="3" pos="66,-10" size="226,28" atlas="uiAtlas" type="filled" fill="{statmodifiedmax}" globalopacitymod="1.3" color="[darkGrey]" />
						<filledsprite name="BarContent" depth="4" pos="66,-10" size="226,28" atlas="uiAtlas" type="filled" fill="0" color="[hudElementsWater]" />
						<texture name="Icon" depth="7" pos="37,-12" size="22,22" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_stats_thirst_icon.png" color="[hudElementsIcon]" foregroundlayer="true"   />
						<label name="TextContent" depth="7" pos="145,-16" text="{playerwater}" font_size="16" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" pivot="topleft" controller="PlayerStatsWindow" />
					</rect>
				</rect>

				<rect name="hud" pos="90,220" side="left" controller="BuffPopoutList" pivot="BottomLeft" >
					<panel width="168" height="46" name="item" visible="false" pivot="right" disableautobackground="true" pos="70, -10" style="press" sound="[recipe_click]" on_hover="true" >
						<sprite depth="3" pos="0,0"  name="Background" sprite="ui_game_popup" height="46" width="162" pivot="center" flip="Horizontally" color="[transparent]" />
						<sprite depth="4" name="Icon" size="40,40" pos="-54,0" pivot="center" color="[transparent]"/>
						<label depth="6" name="TextContent" pos="0,0" font_size="28" color="[white]" justify="center" height="40" pivot="center"/>
					</panel>
				</rect>

			</window>
		</append>

 		<!--  Toolbelt -->

		<remove xpath="/windows/window[@name='windowToolbelt']" />

		<append xpath="/windows">
			<window name="windowToolbelt" depth="0" pos="0,85" size="760,226" backgroundcolor="[black]" controller="ToolbeltWindow" visible="{toolbeltvisible}" cursor_area="true" xp_fill_speed="2.5" >
				<rect>
					<sprite depth="2" pos="-337,32" height="8" width="677" type="sliced" foregroundlayer="true" color="red" />
					<sprite depth="3" pos="-337,30" height="6" width="677" color="[darkGrey]" foregroundlayer="true" type="sliced" />
					<sprite depth="4" pos="-337,30" height="6" width="677" color="{xpcolor}" sprite="menu_empty3px" foregroundlayer="true" type="filled" fill="{xp}" globalopacitymod="1.5" controller="ToolbeltWindow" standard_xp_color="{xpcolor}" updating_xp_color="[green]" deficit_xp_color="[hudElementsACNTClr1]" xp_fill_speed="2.5" />

					<grid name="survivorHUDtoolbelt" depth="1" pos="-338,20" rows="1" cols="8" cell_width="85" cell_height="85" controller="Toolbelt" repeat_content="true">
						<survivorHUD_toolbelt_interface name="0" />
					</grid>

					<grid name="survivorHUDtoolbeltNumbers" depth="1" pos="-305,-62" rows="1" cols="8" cell_width="85" cell_height="85" repeat_content="false">
						<label name="survivorHUDtbNumber1" depth="10" size="12,22" text="1" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber2" depth="10" size="12,22" text="2" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber3" depth="10" size="12,22" text="3" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber4" depth="10" size="12,22" text="4" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber5" depth="10" size="12,22" text="5" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber6" depth="10" size="12,22" text="6" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber7" depth="10" size="12,22" text="7" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber8" depth="10" size="12,22" text="8" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
					</grid>
				</rect>
			</window>
		</append>

		<!--  Level Display & XP Bar -->

		<append xpath="/windows">
			<window name="survivorHUDlevelXP" pos="-30,-15" size="140,96" depth="-1">
				<rect pos="0,0">
					<texture name="survivorHUDlevelxpBG" depth="0" pos="5,30" size="290,250" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/uiAtlas/survivorHUD_hud_levelxp_background.png" color="[hudElementsBG]" globalopacitymod="1.5" />
					<texture name="survivorHUDlevelxpFG" depth="1" pos="50,0" size="60,52" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/uiAtlas/survivorHUD_hud_levelxp_foreground.png" color="[hudElementsACNTClr1]" globalopacitymod="1.3" />
					<label name="survivorHUDlevelxpLVL" depth="3" pos="45,-10" size="75,75" text="{playerlevel}[-]" font_size="36" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" upper_case="true" controller="PlayerStatsWindow" />
				</rect>
			</window>
		</append>

		<!--  Day & Time Display HUD -->

		<append xpath="/windows">
			<window name="survivorHUDdayTimeFrame" depth="1" pos="-12,600" size="100,100" controller="CompassWindow">

				<texture name="compassTexture" pos="-900,0" depth="-1" style="compass.window.compass.texture" rect_size="0.25,1" rect_offset=".8,0" color="[transparent]"/> <!-- MANDATORY ASSET, OR IT BLOWS UP -->

				<sprite pos="145,-625" sprite="" color="255,255,255,255" globalopacitymod="1.8">
					<texture name="survivorHUDdateIcon" depth="2" pos="123, 0" size="35,30" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_date_icon.png" color="[hudElementsBG]" globalopacitymod="1.5" />
					<texture name="survivorHUDtimeIcon" depth="2" pos="178, 0" size="35,30" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_time_icon.png" color="[hudElementsBG]" globalopacitymod="1.5" />

					<label name="survivorHUDday" depth="2" pos="140,-46" width="70" height="30" text="[{daycolor|always}]{day|always}" font_size="20" crispness="Never" effect="outline" effect_distance="1,1" upper_case="true" pivot="center" justify="center" />
					<label name="survivorHUDtime" depth="2" pos="195,-46" width="70" height="40" text="{time|always}" font_size="20" crispness="Never" effect="outline" effect_distance="1,1" upper_case="true" pivot="center" justify="center" />
				</sprite>
			</window>
		</append>

		<!--  Time Display UI -->

		<append xpath="/windows">
			<window name="survivorHUDtimeFrame" depth="-1" pos="-12,50" size="100,100" controller="MapStats">
 					<sprite depth="5" pos="65,-152" sprite="" color="255,255,255,255" globalopacitymod="1.8">
					<label name="survivorHUDdayTime" depth="6" pos="0,-8" size="80,35" text="{mapdaytime}[-]" font_size="28" crispness="Never" effect="outline" effect_distance="1,1" upper_case="true" pivot="center" justify="center" />
				</sprite>
			</window>
		</append>

		<!--  Environment Station -->

		<append xpath="/windows">
			<window name="survivorHUDenvironment" pos="20,-90" size="120,60">
				<rect name="survivorHUDenvironment" pos="0,0">
					<texture name="survivorHUDelevationIcon" depth="2" pos="13,-12" size="35,30"  texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_map_elevation_icon.png" color="[hudElementsBG]" globalopacitymod="1.5" />
					<texture name="survivorHUDmapTempIcon" depth="2" pos="68,-12" size="35,30" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_map_temperature_icon.png" color="[hudElementsBG]" globalopacitymod="1.5" />
					<texture name="survivorHUDcoreTempIcon" depth="2" pos="123,-12" size="35,30" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/ItemIconAtlas/survivorHUD_hud_coretemp_icon.png" color="[hudElementsBG]" globalopacitymod="1.5" />

					<label name="survivorHUDelevationValue" depth="3" pos="-30,-52" text="{mapelevation} M" font_size="20" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" controller="MapStats" />
					<label name="survivorHUDmapTempValue" depth="3" pos="25,-52" text="{maptemperature}" font_size="20" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" controller="MapStats" />
					<label name="survivorHUDcoreTempValue" depth="3" pos="80,-52" text="{playercoretemp}" font_size="20" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" controller="PlayerStatsWindow" />
				</rect>
			</window>
		</append>

	<!--	Party System-->

		<remove xpath="/windows/window[@name='windowGroupBars']" />

		<append xpath="/windows">
			<window name="windowGroupBars" controller="PartyWindow" depth="-20">

				<grid name="hud" pos="9,-180" rows="7" cols="1" width="168" cell_width="168" cell_height="40" side="left" repeat_content="true" controller="PartyEntryList" >
					<party_entry />
				</grid>
			</window>
		</append>



</configs>
