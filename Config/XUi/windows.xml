<!--						<filledsprite name="BarContent" depth="4" pos="66,-10" size="226,28" atlas="uiAtlas" sprite="survivorHUD_stats_stamina_bar_filled_v3" type="filled" fill="0" color="[hudElementsFood]" />-->
<!--						<sprite name="Icon" depth="7" pos="37,-12" size="22,22" atlas="itemiconatlas" sprite="survivorHUD_hud_stats_hunger_icon" color="[hudElementsIcon]" foregroundlayer="true" />-->
