<!--					</rect>-->

					<rect name="survivorHUDthirstBar" pos="0,-65" size="240,55" controller="HUDStatBar" stat_type="Water" visible="{statvisible}">
						<sprite name="background" depth="3" pos="66,-10" size="226,28" atlas="uiAtlas" sprite="survivorHUD_stats_stamina_bar_empty_v3" type="sliced" color="[darkGrey]" flip="vertically" />
						<filledsprite name="background" depth="3" pos="66,-10" size="226,28" atlas="uiAtlas" sprite="survivorHUD_stats_health_bar_empty_v3" type="filled" fill="{statmodifiedmax}" globalopacitymod="1.3" color="[darkGrey]" />
						<filledsprite name="BarContent" depth="4" pos="66,-10" size="226,28" atlas="uiAtlas" sprite="survivorHUD_stats_stamina_bar_filled_v3" type="filled" fill="0" color="[hudElementsWater]" />
						<sprite name="Icon" depth="7" pos="37,-12" size="22,22" atlas="itemiconatlas" sprite="survivorHUD_hud_stats_thirst_icon" color="[hudElementsIcon]" foregroundlayer="true" />
