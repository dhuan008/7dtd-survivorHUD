		<!--  Chat Output -->

		<remove xpath="/windows/window[@name='chatoutput']" />

		<append xpath="/windows">
			<window name="chatoutput" depth="1" pos="10,-365" size="500,250" anchor="LeftTop" controller="ChatOutput" fadeout_wait_time="5" fadeout_duration="2">
				<textlist name="txtOutput" depth="2" pos="8,-214" size="484,210" list_style="chat" pivot="bottomleft" font_size="22" crispness="Never" effect="outline" effect_distance="1,1" />
			</window>
		</append>


		<!--  Chat Input -->

		<remove xpath="/windows/window[@name='chat']" />

		<append xpath="/windows">
			<window name="chat" pos="10,-365" size="500,250" anchor="LeftTop" controller="Chat" cursor_area="true">
				<sprite name="survivorHUDchatBG" depth="1" pos="-30,0" size="550,265" atlas="uiAtlas" sprite="survivorHUD_hud_general_panel_background" color="[hudElementsBG]" type="sliced" globalopacitymod="0.7" />

				<rect name="input" depth="2" pos="0,-222" height="32">
					<sprite name="survivorHUDseparateLine" depth="8" pos="20,0" size="3,450" atlas="uiAtlas" sprite="survivorHUD_hud_general_separate_line" color="[hudElementsLine]" rotation="90" globalopacitymod="1.5" />

					<survivorHUD_chat_combobox name="cbxTarget" pos="2,-8" width="100" height="22" type="ComboBoxList`1[EChatType]" value_max="party" font_size="22" localization_prefix="xuiChatTarget" />
					<textfield name="txtInput" depth="2" pos="110,-18" width="386" height="28" font_size="22" crispness="Never" backgroundcolor="[transparent]" pivot="left" justify="left" overflow="ClampContent" max_line_count="1" />
				</rect>
			</window>
		</append>

		<!--  Toolbelt -->

		<remove xpath="/windows/window[@name='windowToolbelt']" />

		<append xpath="/windows">
			<window name="windowToolbelt" depth="0" pos="0,85" size="760,226" backgroundcolor="[black]" controller="ToolbeltWindow" visible="{toolbeltvisible}" cursor_area="true" xp_fill_speed="2.5" >
				<rect>
					<sprite depth="2" pos="-337,28" height="8" width="677" type="sliced" foregroundlayer="true" color="red" />
					<sprite depth="3" pos="-337,26" height="6" width="677" color="[darkGrey]" foregroundlayer="true" type="sliced" />
					<sprite depth="4" pos="-337,26" height="6" width="677" color="{xpcolor}" sprite="menu_empty3px" foregroundlayer="true" type="filled" fill="{xp}" globalopacitymod="1.5" controller="ToolbeltWindow" standard_xp_color="[xpcolor]" updating_xp_color="[green]" deficit_xp_color="[hudElementsACNTClr1]" xp_fill_speed="2.5" />

					<grid name="survivorHUDtoolbelt" depth="1" pos="-338,20" rows="1" cols="8" cell_width="85" cell_height="85" controller="Toolbelt" repeat_content="true">
						<survivorHUD_toolbelt_itemstack_85 name="0" />
					</grid>

					<grid name="survivorHUDtoolbeltNumbers" depth="1" pos="-305,-62" rows="1" cols="8" cell_width="85" cell_height="85" repeat_content="false">
						<label name="survivorHUDtbNumber1" depth="10" size="12,22" text="1" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber2" depth="10" size="12,22" text="2" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber3" depth="10" size="12,22" text="3" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber4" depth="10" size="12,22" text="4" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber5" depth="10" size="12,22" text="5" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber6" depth="10" size="12,22" text="6" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber7" depth="10" size="12,22" text="7" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
						<label name="survivorHUDtbNumber8" depth="10" size="12,22" text="8" font_size="20" color="[hudElementsTBSlot]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" />
					</grid>
				</rect>
			</window>
		</append>

		<!--  Level Display & XP Bar -->

		<append xpath="/windows">
			<window name="survivorHUDlevelXP" pos="-30,-15" size="140,96" depth="-1">
				<rect pos="0,0">
					<texture name="survivorHUDlevelxpBG" depth="0" pos="5,30" size="290,250" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/uiAtlas/survivorHUD_hud_levelxp_background.png" color="[hudElementsBG]" globalopacitymod="1.5" />
					<texture name="survivorHUDlevelxpFG" depth="1" pos="50,-10" size="60,52" texture="@https://raw.githubusercontent.com/lloan/7dtd-survivorHUD/master/UIAtlases/uiAtlas/survivorHUD_hud_levelxp_foreground.png" color="[hudElementsACNTClr1]" globalopacitymod="1.3" />
					<label name="survivorHUDlevelxpLVL" depth="3" pos="45,-18" size="75,75" text="{playerlevel}[-]{playername}" font_size="36" color="[hudElementsLBLPri]" crispness="Never" effect="outline" effect_distance="1,1" justify="center" upper_case="true" controller="PlayerStatsWindow" />
				</rect>
			</window>
		</append>

		<!--  Day & Time Display HUD -->

		<append xpath="/windows">
			<window name="survivorHUDdayTimeFrame" depth="1" pos="-12,600" size="100,100" controller="CompassWindow">

				<texture name="compassTexture" pos="-900,0" depth="-1" style="compass.window.compass.texture" rect_size="0.25,1" rect_offset=".8,0" color="[transparent]"/> <!-- MANDATORY ASSET, OR IT BLOWS UP -->

				<sprite name="survivorHUDdayTimeBG" depth="-1" pos="60,-50" size="200,115" atlas="uiAtlas" sprite="survivorHUD_hud_lootitem_background" color="[hudElementsBG]" globalopacitymod="0.8" />

				<sprite pos="145,-625" sprite="" color="255,255,255,255" globalopacitymod="1.8">
					<label name="survivorHUDday" depth="2" pos="5,-5" width="70" height="30" text="{daytitle} [{daycolor|always}]{day|always}" font_size="32" crispness="Never" effect="outline" effect_distance="1,1" upper_case="true" pivot="center" justify="center" />
					<label name="survivorHUDtime" depth="2" pos="5,-35" width="70" height="40" text="{time|always}" font_size="38" crispness="Never" effect="outline" effect_distance="1,1" upper_case="true" pivot="center" justify="center" />
				</sprite>
			</window>
		</append>

