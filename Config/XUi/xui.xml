<configs>

    <!--   Compass -->

    <setattribute xpath="/xui/ruleset[@name='default']/window_group[@name='compass']/window[@name='windowCompass']"
                  name="anchor">CenterTop
    </setattribute>


    <!--   Level Display & XP Bar -->

    <append xpath="/xui/ruleset[@name='default']/window_group[@name='toolbelt']">
        <window name="survivorHUDlevelXP" anchor="LeftTop"/>
    </append>


    <!--   Day & Time Display HUD -->

    <append xpath="/xui/ruleset[@name='default']/window_group[@name='compass']">
        <window name="survivorHUDdayTimeFrame" anchor="LeftTop"/>
    </append>


    <!--   Time Display UI -->

    <append xpath="/xui/ruleset[@name='default']/window_group[@name='map']">
        <window name="survivorHUDtimeFrame" anchor="LeftTop"/>
    </append>


    <!--   Temperature & Elevation Display -->

    <append xpath="/xui/ruleset[@name='default']/window_group[@name='compass']">
        <window name="survivorHUDenvironment" anchor="LeftTop"/>
    </append>

</configs>
